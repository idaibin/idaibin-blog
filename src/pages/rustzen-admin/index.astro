---
import BaseItems from "@/components/BaseItems.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getPosts } from "@/utils";

const posts = await getPosts("rustzenAdmin", 100);
---

<BaseLayout
  title="Rustzen Admin"
  description="Rust + React admin template project"
>
  <main class="project-intro">
    <!-- Project Header -->
    <header class="project-header">
      <h1 class="project-title">ðŸš€ Rustzen Admin</h1>
      <p class="project-description">
        A modern admin system template built with <span class="highlight"
          >Rust</span
        >, featuring high performance, modularity, and comprehensive permissions
        management.
      </p>
      <div>
        <a
          href="https://github.com/idaibin/rustzen-admin"
          class="project-link"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            ></path>
          </svg>
          GitHub Repository
        </a>
      </div>
    </header>

    <!-- Tech Stack Section -->
    <section class="tech-stack-section">
      <h2 class="tech-stack-title">Tech Stack</h2>
      <ul class="tech-stack-list">
        <li class="tech-stack-item">
          <span class="tech-stack-category">Backend:</span>
          <span class="tech-stack-content">Rust + Axum + sqlx + JWT + RBAC</span
          >
        </li>
        <li class="tech-stack-item">
          <span class="tech-stack-category">Frontend:</span>
          <span class="tech-stack-content"
            >Vite + React + Zustand + Tailwind</span
          >
        </li>
        <li class="tech-stack-item">
          <span class="tech-stack-category">Deploy:</span>
          <span class="tech-stack-content"
            >Rust binary, frontend and backend can be deployed separately</span
          >
        </li>
      </ul>
    </section>

    <!-- Articles Section -->
    <section class="articles-section">
      <h2 class="articles-header">ðŸ“š Related Articles</h2>
      <BaseItems posts={posts} path="/rustzen-admin" />
