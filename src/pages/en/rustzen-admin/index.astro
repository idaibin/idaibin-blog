---
import BaseItems from '../../../components/BaseItems.astro';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getPosts } from '../../../consts';
import { useTranslations } from '../../../i18n';

const t = useTranslations('en');

const posts = await getPosts('rustzenAdmin', 'en', 100);
---

<BaseLayout title={t('rustzen.title')} description={t('rustzen.description')}>
  <main class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold">{t('rustzen.intro.title')}</h1>
    <p class="mt-4 text-gray-700">
      {t('rustzen.intro.description')}
    </p>
    <p class="mt-2">
      ðŸ”— <a
        href="https://github.com/idaibin/rustzen-admin"
        class="text-blue-600 hover:underline"
      >
        {t('rustzen.github')}
      </a>
    </p>

    <h2 class="mt-6 text-2xl font-semibold">{t('rustzen.tech.title')}</h2>
    <ul class="list-disc pl-6 mt-2 text-gray-700">
      <li>{t('rustzen.tech.backend')}</li>
      <li>{t('rustzen.tech.frontend')}</li>
      <li>{t('rustzen.tech.deploy')}</li>
    </ul>

    <div class="mb-4">
      <h2 class="text-xl font-semibold">{t('rustzen.articles.title')}</h2>
    </div>

    <BaseItems posts={posts} path="rustzen-admin" />
  </main>
</BaseLayout>
