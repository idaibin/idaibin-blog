---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getPosts } from '../../../consts';
import BaseItems from '../../../components/BaseItems.astro';
import { useTranslations } from '../../../i18n';

const t = useTranslations('en');

const posts = await getPosts('blog', 'en', 100);
---

<BaseLayout title={t('blog.title')} description={t('blog.description')}>
  <main class="max-w-4xl mx-auto px-4 py-8">
    <!-- Page Header -->
    <header class="page-header mb-12">
      <h1 class="page-title">{t('blog.title')}</h1>
      <p class="page-description">
        {t('blog.description')}
      </p>
      <div class="page-stats">
        <span class="stat-badge">{posts.length} {t('blog.stats.articles')}</span
        >
        <span class="stat-badge">{t('blog.stats.updating')}</span>
      </div>
    </header>

    <!-- Articles Section -->
    <section class="articles-section">
      <BaseItems posts={posts} path="blog" />
    </section>
  </main>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    padding: 2rem 0;
    border-bottom: 1px solid rgba(var(--accent), 0.1);
    margin-bottom: 3rem;
  }

  .page-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: rgb(var(--black));
    animation: fadeInUp 0.6s ease-out;
  }

  .page-description {
    font-size: 1.125rem;
    line-height: 1.6;
    color: rgb(var(--gray-dark));
    margin: 0 0 1.5rem 0;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
    animation: fadeInUp 0.6s ease-out 0.1s both;
  }

  .page-stats {
    display: flex;
    justify-content: center;
    gap: 1rem;
    animation: fadeInUp 0.6s ease-out 0.2s both;
  }

  .stat-badge {
    background: rgba(var(--accent), 0.1);
    color: rgb(var(--accent));
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 500;
    border: 1px solid rgba(var(--accent), 0.2);
  }

  .articles-section {
    animation: fadeInUp 0.6s ease-out 0.3s both;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 2rem;
    }

    .page-description {
      font-size: 1rem;
    }

    .page-stats {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
