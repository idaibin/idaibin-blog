---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getPosts } from "@/utils";
import BaseItems from "@/components/BaseItems.astro";

const posts = await getPosts("blog", 100);
---

<BaseLayout
  title="üìù Tech Blog"
  description="Sharing articles about Rust, React and modern full-stack development"
>
  <main class="max-w-4xl mx-auto px-4 py-8">
    <!-- Page Header -->
    <header class="page-header mb-12">
      <h1 class="page-title">üìù Tech Blog</h1>
      <p class="page-description">
        Sharing articles about Rust, React and modern full-stack development
      </p>
      <div class="page-stats">
        <span class="stat-badge">{posts.length} articles</span>
        <span class="stat-badge">continuously updating</span>
      </div>
    </header>
    <!-- Articles Section -->
    <section class="animate-fade-in-up-delay-3">
      <BaseItems posts={posts} path="/blog" />
    </section>
  </main>
</BaseLayout>
