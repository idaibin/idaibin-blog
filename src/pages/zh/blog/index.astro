---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getPosts } from "@/utils";
import BaseItems from "@/components/BaseItems.astro";

const posts = await getPosts("blogZh", 100);
---

<BaseLayout
  title="📝 技术博客"
  description="分享关于 Rust、React 和现代全栈开发的技术文章"
>
  <main class="max-w-4xl mx-auto px-4 py-8">
    <!-- Page Header -->
    <header class="page-header mb-12">
      <h1 class="page-title">📝 技术博客</h1>
      <p class="page-description">
        分享关于 Rust、React 和现代全栈开发的技术文章
      </p>
      <div class="page-stats">
        <span class="stat-badge">{posts.length} 篇文章</span>
        <span class="stat-badge">持续更新中</span>
      </div>
    </header>

    <!-- Articles Section -->
    <section class="articles-section">
      <BaseItems posts={posts} path="/zh/blog" />
    </section>
  </main>
</BaseLayout>
