---
interface Props {
  date: Date;
}

const { date } = Astro.props;
const currentLang = Astro.currentLocale || "en";

const getLocaleDateString = (date: Date, lang: string) => {
  if (lang === "en") {
    return date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    });
  } else {
    return date.toLocaleDateString("zh-cn", {
      year: "numeric",
      month: "long",
      day: "numeric",
    });
  }
};
---

<time datetime={date.toISOString()}>
  {getLocaleDateString(date, currentLang)}
</time>
