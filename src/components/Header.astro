---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import SocialLinks from './SocialLinks.astro';
import LanguageSwitcher from './LanguageSwitcher.astro';
import { useTranslations } from '../i18n';

const currentLocale = (Astro.currentLocale || 'zh') as 'zh' | 'en';
const t = useTranslations(currentLocale);

// 根据当前语言生成导航链接
const getNavLink = (path: string) => {
  if (currentLocale === 'zh') {
    if (path === '/') path = '/index';
    return `${path}-zh`;
  }
  if (path === '/index-') path = '/';
  return path.replace('-en', '');
};
---

<header>
  <nav>
    <h2><a href={getNavLink('/')}>{SITE_TITLE}</a></h2>
    <div class="internal-links">
      <HeaderLink href={getNavLink('/')}>{t('nav.home')}</HeaderLink>
      <HeaderLink href={getNavLink('/rustzen-admin')}
        >{t('nav.rustzen')}</HeaderLink
      >
      <HeaderLink href={getNavLink('/blog')}>{t('nav.blog')}</HeaderLink>
    </div>
    <div class="nav-right">
      <LanguageSwitcher />
      <SocialLinks />
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    align-items: center;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .nav-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
    .nav-right {
      gap: 0.5rem;
    }
  }
</style>
