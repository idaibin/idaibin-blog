---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { Image } from 'astro:assets';

type BlogData = CollectionEntry<'blog'>['data'];
type RustzenData = CollectionEntry<'rustzenAdmin'>['data'];

interface Props extends BlogData {
  language?: string;
  alternateUrl?: string;
}

const {
  title,
  description,
  pubDate,
  heroImage,
  language = 'zh',
  alternateUrl,
} = Astro.props;
---

<html lang={language}>
  <head>
    <BaseHead title={title} description={description} />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
      }

      .hero-image {
        width: 100%;
        max-width: 800px;
        height: 300px;
        margin: 0 auto 2rem auto;
        overflow: hidden;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
        position: relative;
      }
      .hero-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        display: block;
        transition: transform 0.3s ease;
      }
      .hero-image:hover img {
        transform: scale(1.05);
      }
      .prose {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }

      .language-switcher {
        text-align: center;
        margin-bottom: 1rem;
      }

      .language-switcher a {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: rgb(var(--accent-light));
        color: rgb(var(--accent));
        text-decoration: none;
        border-radius: 6px;
        font-size: 0.9rem;
        transition: all 0.2s ease;
      }

      .language-switcher a:hover {
        background: rgb(var(--accent));
        color: white;
        transform: translateY(-1px);
      }

      /* ÂìçÂ∫îÂºè‰ºòÂåñ */
      @media (max-width: 768px) {
        .hero-image {
          height: 200px;
          margin-bottom: 1.5rem;
          border-radius: 8px;
        }

        .prose {
          padding: 0.5em;
        }

        .title {
          padding: 0.5em 0;
        }

        .title h1 {
          font-size: 1.8rem;
          line-height: 1.2;
        }
      }

      @media (max-width: 480px) {
        .hero-image {
          height: 160px;
          border-radius: 6px;
        }

        .title h1 {
          font-size: 1.5rem;
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        {
          heroImage && (
            <div class="hero-image">
              <Image
                width={800}
                height={300}
                src={heroImage}
                alt={title}
                loading="eager"
                format="webp"
                quality={85}
              />
            </div>
          )
        }
        <div class="prose">
          <div class="title">
            <div class="date">
              <FormattedDate date={pubDate} />
            </div>
            <h1>{title}</h1>
            {
              alternateUrl && (
                <div class="language-switcher">
                  <a href={alternateUrl}>
                    <span>üåê</span>
                    <span>{language === 'zh' ? 'English' : '‰∏≠Êñá'}</span>
                  </a>
                </div>
              )
            }
            <hr />
          </div>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
